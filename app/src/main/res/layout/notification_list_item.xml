<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/notification_item_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/notification_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/notifications_title"
            android:src="@drawable/notif_account_deleted" />

        <TextView
            android:id="@+id/list_item_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/notification_image"
            android:layout_toStartOf="@+id/notification_image"
            android:layout_toLeftOf="@+id/list_item_notification_datetime"
            android:layout_toEndOf="@+id/list_item_notification_datetime"          
            android:text="@string/account_deleted_sample"
            android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Semilight"
            android:textColor="@color/mtrl_gray"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/list_item_notification_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/list_item_notification_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_sample"
                android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Normal"
                android:textColor="@color/ssc_elfec_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/list_item_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_sample"
                android:textColor="@color/ssc_elfec_color"
                android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Normal"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/list_item_notification_message"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/notification_message_sample"
        android:textColor="@color/mtrl_gray"
        android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Normal"
        android:textSize="15sp" />
    <View
                android:id="@+id/static_separator"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/background_soft_gray" />

</LinearLayout>