<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/marker_location_type"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_text_color"
        android:textSize="12sp"/>
    
    <TextView
        android:id="@+id/marker_title"
        android:layout_marginTop="-8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ssc_elfec_color"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txt_marker_address"
        android:drawableLeft="@drawable/marker_address"
        android:drawableStart="@drawable/marker_address"
        android:layout_marginTop="-6dp"
        android:layout_width="@dimen/marker_popup_txt_width"
        android:lineSpacingExtra="-4dp"
        android:gravity="top"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/txt_marker_phone"
        android:layout_width="@dimen/marker_popup_txt_width"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="-4dp"
        android:gravity="top"
        android:drawableLeft="@drawable/marker_phone"
        android:drawableStart="@drawable/marker_phone"
        android:textSize="16sp" />
	        
    <TextView
        android:id="@+id/txt_marker_bussines_hours"
        android:layout_width="@dimen/marker_popup_txt_width"
        android:lineSpacingExtra="-4dp"
        android:gravity="top"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/marker_bussines_hours"
        android:drawableStart="@drawable/marker_bussines_hours"
        android:textSize="16sp"/>

</LinearLayout>
