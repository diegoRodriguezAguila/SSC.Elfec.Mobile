<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.elfec.ssc.view.ViewAccountDetails"
    tools:ignore="UseCompoundDrawables,UselessLeaf,TooDeepLayout" >

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:id="@+id/principal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/dynamic_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/account_details_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/account_mini_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_default"
                            android:contentDescription="@string/account_img"
                            android:padding="8dp"
                            android:src="@drawable/account_mini" />

                        <TextView
                            android:id="@+id/txt_account_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:text="@string/account_sample"
                            android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Semilight"
                            android:textColor="@color/dark_gray"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/row_nus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_default"
                            android:contentDescription="@string/account_img"
                            android:padding="8dp"
                            android:src="@drawable/nus_mini" />

                        <TextView
                            android:id="@+id/txt_nus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:text="@string/nus_sample"
                            android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Semilight"
                            android:textColor="@color/dark_gray"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/dasd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_default"
                            android:contentDescription="@string/account_img"
                            android:padding="8dp"
                            android:src="@drawable/account_owner" />

                        <TextView
                            android:id="@+id/txt_owner_client"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:text="@string/name_sample"
                            android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Semilight"
                            android:textColor="@color/dark_gray"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:onClick="goToAddressClick"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_default"
                            android:contentDescription="@string/account_img"
                            android:padding="8dp"
                            android:duplicateParentState="true"
                            android:src="@drawable/client_address" />

                        <TextView
                            android:id="@+id/txt_client_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:duplicateParentState="true"
                            android:text="@string/address_sample"
                            android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Semilight"
                            android:textColor="@color/contact_link_txt_color"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_account_status"
                            android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Semilight"
                            android:textColor="@color/dark_gray"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_account_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:text="@string/account_status_sample"
                            android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Semilight"
                            android:textColor="@color/ssc_elfec_color"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/static_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/ssc_elfec_color" />

                <LinearLayout
                    android:id="@+id/account_debts_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_total_debt"
                            android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Semilight"
                            android:textColor="@color/dark_gray"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/btn_default"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingEnd="6dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:paddingStart="6dp" >

                            <TextView
                                android:id="@+id/total_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/account_balance_sample"
                                android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Light"
                                android:textColor="@color/white"
                                android:textSize="22sp" />

                            <LinearLayout
                                android:id="@+id/layout_decimal_debt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginStart="5dp"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/total_amount_decimal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:includeFontPadding="false"
                                    android:padding="0dp"
                                    android:text="@string/decimal_balance_sample"
                                    android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Semilight"
                                    android:textColor="@color/white"
                                    android:textSize="13sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@android:color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:includeFontPadding="false"
                                    android:padding="0dp"
                                    android:text="@string/lbl_currency"
                                    android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Semilight"
                                    android:textColor="@color/white"
                                    android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/lbl_debt_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_debt_detail"
                        android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Semilight"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <com.elfec.ssc.view.controls.widget.LayoutListView
                        android:id="@+id/listview_account_debts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/account_separator"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/ssc_elfec_color" />

            <LinearLayout
                android:id="@+id/usage_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_usage"
                    android:textAppearance="@style/TextAppearance.ElfecSsc.CustomFont.Semilight"
                    android:textColor="@color/dark_gray"
                    android:textSize="20sp" />

                <com.elfec.ssc.view.controls.widget.LayoutListView
                    android:id="@+id/list_usage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>