<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="8dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/term_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/short_date_sample"
        android:textAppearance="@style/TextAppearance.CustomFont.Semilight"
        android:textColor="@color/dark_gray"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/usage_text"
        android:layout_toStartOf="@+id/usage_text"
        android:layout_toRightOf="@+id/term_text"
        android:layout_toEndOf="@+id/term_text"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        style="@style/ProgressBarssc_elfec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
         />

 <TextView
        android:id="@+id/usage_text"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/usage_sample" android:textAppearance="@style/TextAppearance.CustomFont.Semilight"
        android:textColor="@color/dark_gray"
        android:textSize="18sp" />
</RelativeLayout>
